{
  "general": {
    "defaultOutputPath": "docs/project-structure.md",
    "showConsoleAnimation": true,
    "animationDelay": 50,
    "maxDepth": -1,
    "includeHiddenFiles": false
  },
  "filters": {
    "ignoreFolders": [
      ".git",
      ".vs",
      ".vscode",
      "bin",
      "obj",
      "packages",
      "node_modules",
      ".idea",
      "Debug",
      "Release",
      "target",
      "__pycache__",
      ".pytest_cache",
      "dist",
      "build"
    ],
    "ignoreFiles": [
      "Thumbs.db",
      ".DS_Store",
      "desktop.ini",
      "*.tmp",
      "*.log"
    ],
    "ignoreExtensions": [
      ".exe",
      ".dll",
      ".pdb",
      ".cache",
      ".suo",
      ".user"
    ],
    "customIgnorePatterns": [
      "**/node_modules/**",
      "**/bin/Debug/**",
      "**/obj/**"
    ]
  },
  "output": {
    "formats": [ "markdown", "json", "html", "consolidated" ],
    "includeStats": true,
    "includeProjectInfo": true,
    "includeTimestamp": true,
    "maxFileNameLength": 50
  },
  "display": {
    "consoleIcons": {
      "folder": "[DIR]",
      "file": "[FILE]",
      "csharp": "[C#]",
      "javascript": "[JS]",
      "typescript": "[TS]",
      "python": "[PY]",
      "java": "[JAVA]",
      "html": "[HTML]",
      "css": "[CSS]",
      "json": "[JSON]",
      "xml": "[XML]",
      "markdown": "[MD]",
      "image": "[IMG]",
      "config": "[CFG]",
      "database": "[DB]",
      "archive": "[ZIP]"
    },
    "unicodeIcons": {
      "folder": "📁",
      "file": "📄",
      "csharp": "🔷",
      "javascript": "📜",
      "typescript": "📜",
      "python": "🐍",
      "java": "☕",
      "html": "🌐",
      "css": "🎨",
      "json": "📄",
      "xml": "📄",
      "markdown": "📖",
      "image": "🖼️",
      "config": "⚙️",
      "database": "🗄️",
      "archive": "📦"
    }
  },
  "projectDetection": {
    "enableAdvancedDetection": true,
    "customPatterns": {
      "MyCustomFramework": {
        "files": [ "custom.config", "app.custom" ],
        "folders": [ "CustomModules" ],
        "description": "My Custom Framework Project"
      }
    }
  },
  "statistics": {
    "calculateFileSize": true,
    "countCodeLines": true,
    "analyzeComplexity": false,
    "includeDependencies": true
  }
}